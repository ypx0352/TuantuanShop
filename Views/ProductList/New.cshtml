<style>
    .brand-slider-container {
        overflow-x: scroll;
        overflow-y: hidden;
        width: 100%;
        white-space: nowrap;
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

        .brand-slider-container::-webkit-scrollbar {
            display: none;
        }

    /* less than lg*/
    @@media only screen and (max-width: 992px) {
        .brand-slider-item-wrapper {
            display: inline-block;
            width: 50vw;
            margin-right: 10px;
        }
    }

    /* greater than lg*/
    @@media only screen and (min-width: 992px) {
        .brand-slider-item-wrapper {
            display: inline-block;
            width: 30vw;
            margin-right: 10px;
        }
    }

    .brand-name-block {
        width: 60%;
        height: 20%;
        position: absolute;
        bottom: 0;
        right: 0;
        background-color: rgb(24,24,24);
        color: rgb(255,255,255);
        background: linear-gradient(to right, rgb(253, 141, 131) 50%, rgb(24,24,24) 50%);
        background-size: 200% 100%;
        background-position: right bottom;
        margin-left: 10px;
        transition: all 0.8s ease;
    }

    .brand-slider-item-wrapper:hover .brand-name-block {
        background-position: left bottom;
    }

    .title a {
        text-decoration: none;
        color: #000000;
        line-height: 2.5rem;
    }

    .sorter-dropdown {
        border: 1px solid rgb(232,232,232);
        padding: 1rem;
        display: inline-block;
        font-size: 1rem;
        line-height: 1rem;
        cursor: pointer;
        transition: all 0.8s ease;
    }

    .sorter-icon {
        color: #F58E88;
        display: inline-block;
        transition: transform 0.8s ease;
    }

    .sorter-content {
        display: none;
        transition: all 0.8s ease;
    }

    .sroter-item {
        line-height: 16px;
        cursor: pointer;
    }

    .sorter-item:hover {
        color: #F58E88;
    }

    .sorter-dropdown:hover {
        border: 1px solid black;
        transition: all 0.8s ease;
    }

        .sorter-dropdown:hover .sorter-content {
            display: block;
            transition: all 0.8s ease;
        }

        .sorter-dropdown:hover .sorter-title {
            padding-bottom: 1rem;
            border-bottom: 0.5px solid #585857;
        }

        .sorter-dropdown:hover .sorter-icon {
            transform: rotate(180deg);
            transition: transform 0.8s ease;
        }

    .product-item-wrapper {
        padding: 10px 10% 30px 10%;
        height: 28rem;
        border: 1px solid rgb(232,232,232);
    }

        .product-item-wrapper:hover .item-img {
            transform: scale(1.1);
            transition: transform 0.8s ease;
            overflow: hidden;
        }

</style>

<div>
