@model IEnumerable<Product>


@if (Model.Count() > 0)
{
    <ul class="list-unstyled my-4 mx-md-4 mx-1">
        @foreach (var product in Model)
        {
            <li role="button" onclick="location.href = '@(Url.Action("Show", new { id = product.Id}))'">

                <div class="row align-items-center">
                    <div class="col-3">
                        <img src="@product.ProfilePictureUrl" alt="@product.Name" style="width:100%; max-width:100px">
                    </div>
                    <div class="col-7">
                        @if (@product.OnSale)
                        {
                            <span class="badge bg-warning" style="font-size:xx-small">On Sale</span>
                            <span class='badge bg-danger @(product.HotSale? "":"d-none")' style="font-size: xx-small">Hot Sale</span>
                            <span class='badge bg-success @(product.InStock? "":"d-none")' style="font-size: xx-small">In Stock</span>
                            <span class='badge bg-dark @(product.Disabled? "":"d-none")' style="font-size: xx-small">Disabled</span>
                            <h5 class="mb-2">@product.Name</h5>
                            <div>
                                <span class="text-primary">￥ @product.OnSalePrice </span>
                                <span class="text-decoration-line-through" style="font-size:x-small"> ￥ @product.Price</span>
                            </div>
                        }
                        else
                        {
                            
                            <span class='badge bg-danger @(product.HotSale? "":"d-none")' style="font-size: xx-small">Hot Sale</span>
                            <span class='badge bg-success @(product.InStock? "":"d-none")' style="font-size: xx-small">In Stock</span>
                            <span class='badge bg-dark @(product.Disabled? "":"d-none")' style="font-size: xx-small">Disabled</span>
                            <h5 class="mb-2">@product.Name</h5>
                            <span class="text-primary">￥ @product.Price </span>
                        }
                    </div>
                    <div class="col-2">
                        @if (ViewData["Caller"].Equals("Management"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@product.Id" asp-route-returnAction="@ViewData["ReturnAction"]" asp-route-returnAll="@ViewData["ReturnAll"]" class="btn btn-outline-success btn-sm mb-1"><i class="bi bi-pencil-square"></i> <p class="d-none d-lg-inline">Edit</p></a>
                                <a asp-action="Details" asp-route-id="@product.Id" asp-route-returnAction="@ViewData["ReturnAction"]" asp-route-returnAll="@ViewData["ReturnAll"]" class="btn btn-outline-warning btn-sm mb-1"><i class="bi bi-eye"></i> <p class="d-none d-lg-inline">Details</p></a>
                                <a asp-action="Delete" asp-route-id="@product.Id" asp-route-returnAction="@ViewData["ReturnAction"]" asp-route-returnAll="@ViewData["ReturnAll"]" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"> <p class="d-none d-lg-inline">Delete</p></i></a>
                            </div>
                        }
                        else
                        {
                            <a asp-action="Add" asp-controller="Cart"><i class="bi bi-cart-plus-fill" style="font-size:150%"></i></a>
                        }
                    </div>
                </div>
                <hr />
            </li>

        }
    </ul>
}
else
{
    <div class="text-center mt-5">
        <img src="https://gw.alipayobjects.com/zos/antfincdn/ZHrcdLPrvN/empty.svg" style="height: 100px">
        <p>No Data</p>
    </div>
}



