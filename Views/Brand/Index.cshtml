@model IEnumerable<TuantuanShop.Models.Brand>

@{
    ViewData["Title"] = "All Brands";
}



<p >
    <span class="h3" >All Brands</span>
    <a asp-action="Create" class="btn btn-success float-end"><i class="bi bi-plus-circle-dotted"></i> Create New</a>
</p>
<table class="table text-center align-middle">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Picture
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h5>@item.Name</h5>
                </td>
                <td>
                    <img src="@item.ProfilePictureUrl" style="max-width: 50px">
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-eye"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
