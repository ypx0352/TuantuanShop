@model Brand

@{
    ViewData["Title"] = "New Brand";
}

<p>
    <span class="h3">New Brand</span>
    <a asp-action="Index" asp-controller="@ViewData["ReturnController"]" class="btn btn-outline-danger float-end">Back to List</a>
</p>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="text-center">
        <img style="max-width:150px" id="picturePreview" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="ProfilePictureUrl" class="control-label"></label>
        <input asp-for="ProfilePictureUrl" class="form-control" />
        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="IntroductionText" class="control-label"></label>
        <textarea asp-for="IntroductionText" class="form-control"  style="min-height:200px"></textarea>
        <span asp-validation-for="IntroductionText" class="text-danger"></span>
    </div>
    <div class="col-12 col-md-4 offset-md-4 ">
        <div class="form-group my-5 text-center">
            <button type="submit"  class="btn btn-success" style="width:100%"><i class="bi bi-plus-circle-dotted"></i> Create</button>
        </div>
    </div>
</form>


@section Scripts{
    <script>
        function assignSrc() {
            var output = document.getElementById("picturePreview")
            output.src = $("#ProfilePictureUrl").val();
        }

        $(document).ready(() => assignSrc())

        $("#ProfilePictureUrl").on("change", () => assignSrc())
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

