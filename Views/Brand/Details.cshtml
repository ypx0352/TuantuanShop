@model Brand

@{
    ViewData["Title"] = "Brand Details";
}

<p>
    <span class="h3">Brand Details</span>
    <a asp-action="Index" class="btn btn-outline-danger float-end">Back to List</a>
</p>

<div>
    <div class="text-center">
        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" style="max-width:150px" />
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProfilePictureUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProfilePictureUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IntroductionText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntroductionText)
        </dd>
    </dl>
</div>
<div class="col-12 col-md-4 offset-md-4 ">
        <div class="my-5 text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success" style="width:100%"><i class="bi bi-pencil-square"></i> Edit</a>
        </div>
    </div>
